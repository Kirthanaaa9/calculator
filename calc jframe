    }                                       

    private void buansActionPerformed(java.awt.event.ActionEvent evt) {                                      
  number2=Double.parseDouble(tf.getText());    
double result=0;
if(operators=="+")
result=number1+number2;
else if(operators=="-")
result=number1-number2;
else if(operators=="*")
result=number1*number2;
else if(operators=="/")
result=number1/number2;
tf.setText(result+"");
operators=null;// TODO add your handling code here:
    }                                     

    private void budelActionPerformed(java.awt.event.ActionEvent evt) {                                      
tf.setText("");        // TODO add your handling code here:
    }                                     

    private void bucActionPerformed(java.awt.event.ActionEvent evt) {                                    
String s=tf.getText();
tf.setText(s.substring(0,s.length()-1));// TODO add your handling code here:
    }                                   

